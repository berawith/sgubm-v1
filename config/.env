# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
TIMEZONE=America/New_York

# Database Configuration
DB_DRIVER=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sgubm_isp
DB_USER=postgres
DB_PASSWORD=

# Security
SECRET_KEY=change-this-in-production-to-random-string
ENCRYPTION_KEY=
ENABLE_2FA=false

# JWT
JWT_EXPIRATION_HOURS=24

# MikroTik Integration
MT_TIMEOUT=10
MT_SYNC_INTERVAL=5
MT_AUTO_SYNC=true

# Billing
