AUTO_BILLING=true

# Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMS_PROVIDER=twilio
SMS_API_KEY=
WHATSAPP_ENABLED=false

# System
MAX_UPLOAD_MB=10
SESSION_HOURS=8
