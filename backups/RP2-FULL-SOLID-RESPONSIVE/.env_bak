# ==============================================================================
# SGUBM-V1 Configuration File
# ==============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration - SQLITE (por defecto)
DB_DRIVER=sqlite
DB_NAME=sgubm

# Database Configuration - POSTGRESQL (descomentar para usar PostgreSQL)
#DB_DRIVER=postgresql
#DB_HOST=localhost
#DB_PORT=5432
#DB_NAME=sgubm_isp
#DB_USER=postgres
#DB_PASSWORD=your_password

# Security
SECRET_KEY=dev-secret-key-change-in-production
ENABLE_2FA=false
# ENCRYPTION_KEY=  # Solo si ENABLE_2FA=true

# MikroTik Integration
MT_TIMEOUT=10
MT_SYNC_INTERVAL=5
MT_AUTO_SYNC=true

# Billing
CURRENCY=USD
TAX_RATE=0.12
LATE_FEE_DAYS=3
AUTO_SUSPEND_DAYS=15
AUTO_BILLING=true

# Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMS_PROVIDER=twilio
SMS_API_KEY=
WHATSAPP_ENABLED=false

# System
MAX_UPLOAD_MB=10
SESSION_HOURS=8
TIMEZONE=America/New_York
